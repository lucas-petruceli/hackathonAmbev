<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="#212121"
                android:text="Hoje eu quero"/>


            <LinearLayout
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/brothersRL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/white_circle_action"/>

                    <ImageView
                        android:id="@+id/brothersI"
                        android:layout_centerInParent="true"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/mood_brothers_gray"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dateRL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/white_circle_action"/>

                    <ImageView
                        android:id="@+id/dateI"
                        android:layout_centerInParent="true"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/mood_date_gray"/>

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="#212121"
                android:text="com direito a"/>


            <LinearLayout
                android:paddingTop="12dp"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/crowdRL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:background="@drawable/white_circle_action"/>

                    <ImageView
                        android:id="@+id/crowdI"
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mood_crowd_gray"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/soccerRL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:background="@drawable/white_circle_action"/>

                    <ImageView
                        android:id="@+id/soccerI"
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mood_soccer_gray"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/wifiRL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:background="@drawable/white_circle_action"/>

                    <ImageView
                        android:id="@+id/wifiI"
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mood_wifi_gray"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/musicRL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:background="@drawable/white_circle_action"/>

                    <ImageView
                        android:id="@+id/musicI"
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mood_music_gray"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/foodRL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:background="@drawable/white_circle_action"/>

                    <ImageView
                        android:id="@+id/foodI"
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mood_food_gray"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/parkRL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:background="@drawable/white_circle_action"/>

                    <ImageView
                        android:id="@+id/parkI"
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mood_park_gray"/>

                </RelativeLayout>


            </LinearLayout>

            <Button
                android:id="@+id/findBTN"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="16dp"
                android:background="@drawable/yellow_button"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:clickable="true"
                android:text="Ache meu bar"/>

        </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->
</RelativeLayout>
